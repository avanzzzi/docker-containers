$TTL 1h
; -----------------------------------------------------------------------------
; SOA for example.com
; -----------------------------------------------------------------------------

@ IN SOA ns1.example.com contact.example.com. (
            2016021501      ; Serial
            1h              ; Refresh
            15m             ; Retry
            1d              ; Expire
            1h );           ; Negative Cache TTL

; -----------------------------------------------------------------------------
; zone records
; -----------------------------------------------------------------------------
example.com.        1800    IN    NS        ns1.example.com.

; -----------------------------------------------------------------------------
; pointer records
; -----------------------------------------------------------------------------
ns1                 1800    IN    A         127.0.0.1
www                 1800    IN    A         127.0.0.1

; -----------------------------------------------------------------------------
; cname records
; -----------------------------------------------------------------------------
webmail             3600    IN    CNAME     www.example.com.
